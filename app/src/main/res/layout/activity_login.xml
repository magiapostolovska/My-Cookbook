<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/rounded_background"
        android:elevation="4dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="#333"
            android:textColorHint="#888"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif"/>

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:padding="14dp"
            android:background="@drawable/edittext_background"
            android:textColor="#333"
            android:textColorHint="#888"
            android:layout_marginBottom="18dp"
            android:fontFamily="sans-serif"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:backgroundTint="#A3D4C3"
            android:textColor="#fff"
            android:textStyle="bold"
            android:padding="14dp"
            android:background="@drawable/button_background" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">

            <!-- Google Sign-In Button -->
            <ImageButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/transparent"
                android:contentDescription="Sign in with Google"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_google"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Facebook Login Button -->
            <ImageButton
                android:id="@+id/btnFacebookLogin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Log in with Facebook"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_fb"
                tools:ignore="TouchTargetSizeCheck"
                android:background="@android:color/transparent"
                />

            <!-- Guest Login Button -->
            <ImageButton
                android:id="@+id/btnAnonymousLogin"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Continue as Guest"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_guest"
                tools:ignore="TouchTargetSizeCheck"
                android:background="@android:color/transparent"
                />
        </LinearLayout>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="8dp"
                android:text="@string/go_to_register"
                android:textColor="#A3D4C3"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>
</RelativeLayout>
